<Window x:Class="Zandra.PointsListDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zandra"
        mc:Ignorable="d"
        Title="PointsListDisplay" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="PointsGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" x:Name="KeyColumn"/>
                <DataGridTextColumn Header="ICAO" x:Name="ICAOColumn"/>
                <DataGridTextColumn Header="Name" x:Name="NameColumn"/>
                <DataGridCheckBoxColumn Header="Airfield" x:Name="AirfieldColumn"/>
                <DataGridCheckBoxColumn Header="Entry" x:Name="EntryColumn"/>
                <DataGridCheckBoxColumn Header="Exit" x:Name="ExitColumn"/>
                <DataGridTextColumn Header="Bordering Countries" x:Name="CountriesColumn"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
